<component-set>
	<components>
		<component>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<role-hint>vala-executable</role-hint>
			<implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
			<configuration>
				<phases>
					<process-resources>org.codehaus.mojo:vala-maven-plugin:copy-compile-dependencies</process-resources>
					<compile>org.codehaus.mojo:vala-maven-plugin:valac-executable</compile>
					<install>org.apache.maven.plugins:maven-install-plugin:install</install>
				</phases>
			</configuration>
		</component>
		<component>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<role-hint>vala-library</role-hint>
			<implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
			<configuration>
				<phases>
					<process-resources>org.codehaus.mojo:vala-maven-plugin:copy-compile-dependencies</process-resources>
					<compile>org.codehaus.mojo:vala-maven-plugin:valac-library</compile>
					<install>org.apache.maven.plugins:maven-install-plugin:install</install>
				</phases>
			</configuration>
		</component>
		<component>
			<role>org.gitorious.rgladwell.maven.plugin.vala.CommandExecutor</role>
			<implementation>org.gitorious.rgladwell.maven.plugin.vala.CommandLineExecutor</implementation>
		</component>
	</components>
</component-set>
